<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradien Latar Belakang -->
    <gradient
        android:startColor="#E6D7FF"
        android:endColor="#FFFFFF"
        android:angle="45" />

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#A855F7" />

    <!-- Corner Radius untuk Membuat Sudut Melengkung -->
    <corners
        android:radius="8dp" />

    <!-- Padding (Opsional) -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />

</shape>