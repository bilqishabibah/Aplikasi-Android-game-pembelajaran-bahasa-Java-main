<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#3A1C5A" /> <!-- Ungu lebih gelap saat ditekan -->
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="#5A3E7D" />
            <gradient android:startColor="#4A2C6A" android:endColor="#5A3E7D" android:angle="270" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#7D54CF" /> <!-- Ungu tua default -->
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="#7D54CF" />
            <gradient android:startColor="#7D54CF" android:endColor="#7D54CF" android:angle="270" />
        </shape>
    </item>
</selector>