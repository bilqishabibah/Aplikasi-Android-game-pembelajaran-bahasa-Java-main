<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/bg_main_gradient">

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_gradient"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Logo Text -->
        <TextView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LingoQuest"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:fontFamily="cursive"/>

        <!-- Avatar -->
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:contentDescription="Avatar"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background" />
    </RelativeLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Statistik -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_statistik_card"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Statistik Belajar"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:weightSum="3">

                    <!-- Level -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/bg_statistik_item"
                        android:layout_margin="4dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/level" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Level"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/level_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Poin -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/bg_statistik_item"
                        android:layout_margin="4dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/point" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Poin"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/points_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Streak -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/bg_statistik_item"
                        android:layout_margin="4dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/steak" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Streak"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/streak_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 Hari"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Pilihan Bahasa -->
            <LinearLayout
                android:id="@+id/language_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_statistik_card"
                android:padding="16dp"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pilihan Bahasa"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF" />

                <GridLayout
                    android:id="@+id/language_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:useDefaultMargins="true">

                    <!-- Bahasa Inggris -->
                    <LinearLayout
                        android:id="@+id/layout_english"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:background="@drawable/bg_statistik_item"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/inggris" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Bahasa Inggris"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>

                    <!-- Bahasa Jepang -->
                    <LinearLayout
                        android:id="@+id/layout_japanese"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:background="@drawable/bg_statistik_item"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/jepang" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Bahasa Jepang"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>

                    <!-- Bahasa Korea -->
                    <LinearLayout
                        android:id="@+id/layout_korean"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:background="@drawable/bg_statistik_item"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/korea" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Bahasa Korea"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>

                    <!-- Bahasa Mandarin -->
                    <LinearLayout
                        android:id="@+id/layout_mandarin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:background="@drawable/bg_statistik_item"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/mandarin" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Bahasa Mandarin"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>
                </GridLayout>

                <TextView
                    android:id="@+id/see_more_languages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat bahasa lainnya >"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

            <!-- Tantangan Harian -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                android:background="#37005B">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tantangan Harian"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selesaikan tantangan hari ini untuk mendapatkan bonus 50 poin!"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/timer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="â° 00:00:00"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/btn_start_challenge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mulai Sekarang"
                        android:backgroundTint="#000000"
                        android:textColor="#FFFFFF"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:itemIconTint="@color/nav_icon_color"
        app:itemTextColor="@color/nav_icon_color"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:labelVisibilityMode="labeled"/>

</androidx.constraintlayout.widget.ConstraintLayout>